{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  },
  "include": [
    "scripts/**/*",
    "src/**/*",
    "client/**/*",
    "server/**/*",
    "react-server-dom-webpack.d.ts"
  ],
  "exclude": ["node_modules"]
}
