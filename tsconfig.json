{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["scripts/**/*", "src/**/*"],
  "exclude": ["node_modules"]
} 