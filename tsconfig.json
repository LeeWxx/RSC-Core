{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  },
  "include": ["scripts/**/*", "src/**/*", "client/**/*", "react-server-dom-webpack.d.ts"],
  "exclude": ["node_modules"]
} 